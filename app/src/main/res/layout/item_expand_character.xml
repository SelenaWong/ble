<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_character_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".activity.MainActivity">

        <TextView
            android:id="@+id/item_character_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_small"
      />
    <TextView
        android:id="@+id/item_character_uuidTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_character_nameTv"
        android:textSize="@dimen/txt_smaller"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/item_character_uuidTv"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_character_readTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/txt_smaller"
            android:background="@drawable/corner_blue_bg"
            android:text="@string/gatt_services_read"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_character_writeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_smaller"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_blue_bg"
            android:text="@string/gatt_services_write"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_character_notifyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_smaller"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_blue_bg"
            android:text="@string/gatt_services_notify"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/item_character_indicateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_smaller"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_blue_bg"
            android:text="@string/gatt_services_indicate"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>
